<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<div>
  <a href="/tasks">Back to list</a>
</div>

<div>
  <%= link_to 'Edit this task', edit_path %>
</div>

<div class="btn btn-danger">
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
